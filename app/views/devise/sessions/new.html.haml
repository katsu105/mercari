.single
  = render partial: "config/single-header" 
  
  %main.single-main
    .single-main__login-panel
      .single-main__no-account
        %p
          アカウントをお持ちでない方はこちら
        = link_to "#" do
          新規会員登録

      .single-main__login-form
        = render partial: "config/single-btn"

        .form-group
          %input{type: "email", name: "email", placeholder: "メールアドレス", class: "form-group__text input-defalt"}

        .form-group
          %input{type: "password", name: "password", placeholder: "パスワード", class: "form-group__text input-defalt"}

        .form-group
          %button.btn-default.btn-red
            ログイン

          =link_to "#" do
            パスワードをお忘れの方

  = render partial: "config/single-footer"