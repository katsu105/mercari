// header
= render partial: "config/header"

%nav.bread-crumbs
  %ul
    %li
      = link_to "/" do
        %span メルカリ
      = fa_icon 'angle-right', class: 'icon icon-angle-right'
    %li
      = link_to "/" do
        %span マイページ
      = fa_icon 'angle-right', class: 'icon icon-angle-right'
    %li
      = link_to "/" do
        %span プロフィール

%main.mypage-main.clearfix
  .mypage-main__l-contents
    %h2.set-profile__title
      プロフィール
    %form{action: "/", method: "post"}
      .set-profile__icon
        %figure
          = image_tag("//static-mercari-jp-imgtr2.akamaized.net/images/member_photo_noimage_thumb.png", width: 60, height: 60)
        %input{type: "text", class: "input-default", name: "nickname", placeholder: "例)AYA☆セール中"}

      .set-profile__contents
        %textarea{name: "introduction", placeholder: "例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪", class: "textarea-default"}
        %input{type: "hidden", value: "https://www.mercari.com/jp/mypage/profile/", name: "after_save_callback"}
        %button{type: "submit", class: "btn-default btn-red"}
          変更する


          
  // sidebar
  = render partial: "config/sidebar"

